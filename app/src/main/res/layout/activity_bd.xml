<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="controller.myuniversity.com.myuniversity.BDActivity">

    <Button
        android:id="@+id/btnList"
        android:layout_width="346dp"
        android:layout_height="53dp"
        android:layout_marginBottom="79dp"
        android:background="@color/colorPrimary"
        android:text="List"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/btnAdd"
        app:layout_constraintRight_toRightOf="@+id/btnDelete"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_editor_absoluteX="49dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="349dp"
        android:layout_height="54dp"
        android:layout_marginBottom="78dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="74dp"
        android:background="@android:color/holo_red_light"
        android:text="Delete"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnList"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnUpdate"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintVertical_bias="0.571"
        tools:layout_editor_absoluteX="46dp" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="352dp"
        android:layout_height="56dp"
        android:layout_marginBottom="251dp"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginStart="2dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Update"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btnDelete"
        app:layout_constraintRight_toRightOf="@+id/btnDelete"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.666"
        tools:layout_editor_absoluteY="296dp"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="353dp"
        android:layout_height="54dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="24dp"
        android:background="?attr/colorPrimary"
        android:text="Add"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnUpdate"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/txtPassword"
        app:layout_constraintRight_toRightOf="@+id/btnUpdate"
        app:layout_constraintTop_toBottomOf="@+id/txtPassword"
        app:layout_constraintVertical_bias="0.615"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txtlogin"
        android:layout_width="298dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="@string/login"
        android:inputType="textPersonName"
        android:text="@string/login"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtPassword"
        app:layout_constraintRight_toRightOf="@+id/txtPassword"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="21dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnDelete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.769"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="300dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPersonName"
        android:text="@string/password"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="94dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="28dp" />
</android.support.constraint.ConstraintLayout>
